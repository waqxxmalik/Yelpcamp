<%- include('../partials/header') %>
<!DOCTYPE html>
<html>
<head>
  <title></title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	
</head>
<div class="container">
	<div class="jumbotron">
      <div class="heading">
		<h1><i class="fas fa-campground campicon">Welcome to Yelpcamp Page</i></h1>
	   <a style="margin-left: 10px; margin-top: 20px;" class="btn btn-lg btn-success" href="/campgrounds/new">Add New Campground</a>
		</div>
		
	</div>
 <div class="row" style="display: flex; flex-wrap: wrap;">
		<div class="col-md-12">
			
			   <form action="/campgrounds" method="GET" class="form-inline">
				   <div class="form-group">
					   <input type="text" name="search" placeholder="Campground search..." class="form-control">
					   <input type="submit" value="Search" class="btn btn-default">
				   </div>
			   </form>
		  
		</div>
		
		
	  <% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3">
			<div class="thumbnail">
			   <img src="<%=campground.image%>">
			   <div style="tex-align: center; margin-left: 20%; ">
				   <div class="caption">
				   <h4> <%=campground.name%></h4>
				   <h5><%=campground.dodo%></h5>	
				   <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View More</a>
				
				</div>
					    
			</div>
			</div>
	   </div>
	<% }); %>
	</div>
</div>